{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
        <main>
        <section>
            {{> title data="Work history" big=true}}
            
            <div>
                <p>
                 <ul>
                 {{#each workі}}
                 <li>
                    <div>
                        {{position}}
                    </div>
                    <br>
                    <div>
                        {{duration.from}} - {{#if duration.to}} {{duration.to}} {{else}} (досі працюємо) {{/if}}
                    </div>
                    <br>
                    <div>
                        {{#if url}}
                         {{> link text=company.name href=company.url blank=true noLine=true}}
                       {{else}}
                      <b>
                     {{> link text=company.name href=company.url blank=true noLine=true}}</b>
                        {{/if}}
                    </div>
                    <br>  
                    <br>
                    <div>
                       <strong> Projects ({{projectAmount}})</strong>
                    </div>
                    <br>
                    <ul>
                        {{#each projects}}
                        <li> 
                            <div>{{> link text=name href=url blank=true noLine=true}}</div> 
                             <br>
                             <div><p>{{about}}</p></div>
                             <br>
                             <div><em>Project stacks</em> ({{stackAmount}})</div>
                             <br>
                             <div>
                                <ul>
                                    {{#each stacks}}
                                <li>
                                  {{name}}
                                </li>
                                {{/each}}
                                </ul>   
                               </div>
                               <br>
                               <div><em>Project awards:</em></div>
                               <br>
                               <div>
                                <ul>
                                    {{#each awards}}
                                    <li>{{name}}</li>
                                    {{/each}}
                                </ul>
                               </div>
                             </li>
                        {{/each}}
                    </ul>
                 </li>
                 <br>
                 {{/each}}
                 </ul>
                </p>
            </div>
        </section>
        
    </main>
    {{/with}}
   </div>

