      <li>{{#if adaptive_cruise_control}} adaptive_cruise_control {{/if}}</li>
      <li>{{#if collision_warning}} collision_warning {{/if}}</li>
          </ul>
    {{/with}}
  </li>
  </ul>
 {{/with}}

