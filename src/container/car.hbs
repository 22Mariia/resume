         {{#with display}}{{type}}, {{size}}, {{resoluyion}}, {{touchscreen}}
        {{/with}}
      </li>
    </ul>
    {{/with}}
  </li>
  <li>audio:
    {{#with audio}}
    <ul>
      <li> {{audio:}} {{speakers}} {{subwoofer}} {{ bluetooth}} {{USB}}</li>
    </ul>
    {{/with}}
  </li>
 
  </ul>
  
{{/with}}
</ul>
<ul>
  <li>exterior:
{{#with   exterior}}
<ul>
  <li>wheels:
    {{#with wheels}}
    <ul>
      <li>{{size}} {{type}} {{color}} </li>
    </ul>
    {{/with}}
  </li>
  <li> headlights:
    {{#with  headlights}}
    <ul>
      <li>{{type}} {{brightness}} {{ automatic}}</li>
          </ul>
    {{/with}}
  </li>
  <li>sunroof:
    {{#with sunroof}}
    <ul>
      <li> {{ type}} {{size}} {{automatic}}</li>
    </ul>
    {{/with}}
  </li>
 
  </ul>
  <ul>
  <li>safety:
{{#with   safety}}
<ul>
  <li>airbags:
    {{#with airbags}}
    <ul>
      <li>front: {{ front}}</li>
        <li>side: {{side}}</li>
        <li>knee: {{knee}}</li>
        <li>rear: {{rear}}</li>
            </ul>
    {{/with}}
  </li>
  <li> assistance:
    {{#with  assistance}}
