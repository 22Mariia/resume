<ul>
  <li>interior:
{{#with   interior}}
<ul>
  <li>seats:
    {{#with seats}}
    <ul>
      <li>{{material}} {{color}} {{ heated}} {{ ventilated}}</li>
    </ul>
    {{/with}}
  </li>
  <li>dashboard:
    {{#with dashboard}}
    <ul>
      <li>{{material}} {{color}}</li>
