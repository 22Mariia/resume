<main>
<div class=" ms-5">
 <section >
      <div class="card mt-3 mb-5">
     <div class="row ">
              {{#each navigation.links}}
                           <div class="col-2">
                <div class="nav">
               <div class="nav flex-column mb-3">
                  <div class="nav-item">
                <a href=" {{href}}" class="nav-link  active" >{{text}}</a>
                        </div>
                       </div>
                 </div>
                  </div>  
               {{/each}}
          </div>   
     </div>
    </section>


    <section>
       <div class="row">
          <ul class="breadcrumb">
                  {{#each breadcrumb}}
            <li class="breadcrumb-item">  
             <a  href="{{url}}">{{name}}</a>
                </li> 
                  {{/each}}
             </ul>
              </div>   
         </section>

<section class="mb-5 mt-5">
  <h1 class="mb-4">{{ header}}</h1>
<div class="row">
  {{#each sortBlock}}
<div class="col-3">
  <select class="form-select">
    <option value=" placeholder">{{ placeholder}}</option>
    {{#each options}}
    <option value="{{value}}">{{text}}</option>
    {{/each}}
  </select>
</div>
  {{/each}}
</div>
</section>



<div class="row g-2">
  <section class="col-4"> 
    {{#with filterBlock}}
 <div class="card">
  <div class="card-body">
{{#with sellers}}
<p>{{title}}</p>
{{#each list}}
<div class="form-check">
  <input class="form-check-input" type="checkbox">
  <label class="form-check-label">{{value}}</label>
</div>
{{/each}}
{{/with}}
<hr>
{{#with brands}}
<label class="form label">{{title}}</label>
{{#with input}}
<input class="form-control" type="text" placeholder="{{placeholder}}" >
{{/with}}
{{#each options}}
<div class="form-check">
  <input class="form-check-input" type="checkbox">
  <label class="form-check-label">{{value}}</label>
</div>
{{/each}}
{{/with}}
<hr>
{{#with price}}
<label class="form label">{{title}}</label>
<input class="form-control" type="text" placeholder="{{range.from}}" >
<br>
<input class="form-control" type="text" placeholder="{{range.to}}">
{{#with button}}
<a class="btn btn-outline-secondary mt-3" href="{{link}}">{{text}}</a>
{{/with}}
{{/with}}
<hr>
{{#each  filterList}}
<p>{{title}}</p>
{{#each options}}
<div class="form-check">
  <input class="form-check-input" type="checkbox">
  <label class="form-check-label">{{value}}</label>
</div>
{{/each}}
<hr >
{{/each}}
  </div>
 </div>
 {{/with}}
</section>

<section class="col-8">
 <div class="row g-2">
{{> catalogItem}}
    </div>
</section>
</div>


<div class="mb-5 mt-5">
 <div class="card text-bg-success text-center">
   {{#with service}}
   <h2>{{title}}</h2>
   <p>{{description}}</p>
       <div class="card-body">
   {{#each buttons}}
<a class="btn btn-primary" href="{{link}}">{{text}}</a>
</div>
   {{/each}}
    {{/with}}
 </div>
</div>
 <hr>

<section>
  <div class="row">
      {{#each footer}}
    <div class="col-2 ms-3 list-group">
      <ul class="nav flex-column">
        {{#each this}}
        <li class="nav-item my-2">
          <a href="{{link}} class="nav-link"{{#if @last}}disabled{{/if}} list-item" target="_blank">{{text}}</a>
        </li>
        {{/each}}
      </ul>
    </div>
    {{/each}}
   </div>
</section>
</div>
</main>